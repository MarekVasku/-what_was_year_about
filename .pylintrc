[MASTER]
# Ensure Pylint can import modules from the "src" folder when run from repo root.
init-hook='import sys, os; sys.path.insert(0, os.path.abspath("src"))'
ignore-patterns=__pycache__,.venv

[FORMAT]
# Keep consistent with Ruff and the project's style.
max-line-length=120

[MESSAGES CONTROL]
# Disable high-noise or stylistic rules that are already enforced by Ruff or
# that don't fit the current code structure. We can re-enable selectively later.
disable=
    C0301,  # line-too-long (handled by max-line-length/formatter)
    C0305,  # trailing-newlines
    C0415,  # import-outside-toplevel (used intentionally for lazy/deferred imports)
    C0114,  # missing-module-docstring
    C0116,  # missing-function-docstring
    R0912,  # too-many-branches
    R0914,  # too-many-locals
    R0915,  # too-many-statements
    R1735,  # use-dict-literal (style preference; Ruff also suggests similar changes)
    W0621,  # redefined-outer-name (common in notebooks/scripts; reviewed separately)
    W0718,  # broad-exception-caught (intentional in UI/network boundaries)
    R0801,  # duplicate-code (too noisy for this repo; revisit later)

[TYPECHECK]
# Some UI components (e.g., Gradio) generate attributes at runtime that Pylint
# can't infer statically.
generated-members=click,change,submit,load
